{{!-- Make sure your CSS paths are correct --}}
<link rel="stylesheet" href="./css/style.css">

{{!-- Add some custom styles to ensure basic styling works --}}
<style>
  .login-container {
    max-width: 800px;
    margin: 0 auto;
    padding-left: 80px;
    padding-right: 80px;
    padding-top: 20px;
    padding-bottom: 20px;
    border-radius: 8px;
    background-color: #333;
    margin-top: 50px;
  }
  
  .login-title {
    color: #fff;
    margin-bottom: 20px;
    text-align: center;
    font-family: 'Press Start 2P', cursive;
  }
  
  .form-control {
    background-color: #444;
    border: 1px solid #555;
    color: #fff;
    margin-bottom: 15px;
  }
  
  .form-text {
    color: #aaa !important;
  }
  
  a {
    color: #5822d4;
  }
  
  a:hover {
    color: #9071d8;
    text-decoration: none;
  }
  
  label {
    color: #fff;
    display: block;
    margin-bottom: 5px;
  }
  
  /* Fix: Changed selector to target the button with btn-primary class */
  .btn-primary {
    background-color: #5822d4;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    padding: 8px 16px;
    width: 100%;
    margin-top: 10px;
  }
  
  .btn-primary:hover {
    background-color: #9071d8;
  }
</style>
<div class="login-container">
  <h3 class="login-title">Login</h3>
  
  <form method="post" action="/login">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" class="form-control" id="username" aria-describedby="username">
      
      <label for="password">Password</label>
      <input type="password" name="password" class="form-control" id="password" aria-describedby="password">
      
      <button type="submit" class="btn-primary mt-3" name="Login">Login</button>
    </div>
    
    <div class="mt-3 text-center">
      <small id="registrationHelp" class="form-text">Don't have an account?</small>
      <a href="/register" class="d-block mt-2">Register Here</a>
    </div>
  </form>
</div>