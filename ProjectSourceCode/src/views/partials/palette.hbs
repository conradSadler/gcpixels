<div class="palette-container">
  {{#each rows}}
    <div class="palette-row">
      {{#each this}}
        <div class="palette" data-row="{{@../index}}" data-col="{{@../index}}"></div>
      {{/each}}
    </div>
  {{/each}}

  <div class="pb-2"></div>

  <div class="d-flex justify-content-center">
    <div class="col">
      <button id="palette_add" type="submit" for="palette_add">+</button>
    </div>

    <div class="col">
      <button id="palette_clear">Clear</button>
    </div>
  </div>

  <div class="pb-2"></div>
  <script type="module" src="/js/palette.js"></script>